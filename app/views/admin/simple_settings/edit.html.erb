<%= render :partial => 'admin/shared/configuration_menu' %>

s<h1><%= t('simple_settings') %></h1>

<%= render "shared/error_messages", :target => @simple_configuration %>

<%= form_for @simple_configuration, :url => admin_simple_settings_path, :method => :put do |f| %>
  <h2><%= t(:contacts_settings) %></h2>
  <%= render 'contacts_fields' %>

  <h2><%= t(:juridical_settings) %></h2>
  <%= render 'juridical_fields', :f => f %>

  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_simple_settings_url %>
  </p>
<% end %>
